<div class="authform">
  <%= form_for @city do |f| %>
    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, :class => "form-control"  %>
    </div>
    <div class="form-group">
        <%= f.label :short_name %>
        <%= f.text_field :short_name, :class => "form-control"  %>
    </div>
      <%= f.submit "Save", :class => "btn btn-primary" %>
  <% end %>
</div>
