<div class="container">
  <div class="row">
    <h3>Cities</h3>
    <div class="column">
      <table class="table">
        <tbody>
          <% @cities.each do |city| %>
            <tr>
              <td><%= city.name %></td>
              <td><%= city.short_name %></td>
              <td><%= button_to "Edit", edit_city_path(city.id), class: "btn btn-default", method: :get %></td>
              <td><%= button_to "Delete", city_path(city.id), class: "btn btn-danger  ", method: :delete, data: { confirm: "Are you sure?" } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= button_to 'New City', new_city_path, class: "btn btn-default", method: :get %>
</div>
